<% include partials/header %>

  <div id="jumbo-main" class="jumbotron">
    <h1 class="display-4 text-center"><%= title %></h1>
    <hr>
    <p class="lead">Your event start here: <%= location %></p>
    <hr class="my-4">
    <p><%= description %></p>
  </div>
  <table id="main-table" class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Date</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% var i = 1 %>
      <% users.forEach((user) => { %>
        <tr>
          <th scope="row" class="align-middle"> <%= i++ %> </th>
            <td class="align-middle"><%= user.name %> </td>
            <td class="align-middle"><%= user.response %></td>
            <td class="align-middle"><a class="btn btn-warning" href="/events/<%= shortURL %>/edit">Edit</a></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

<% include partials/footer %>